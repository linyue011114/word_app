{
    "version": "0.2.0",
    "configurations": [
        
      {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "app.py",   // ← Flask アプリのファイル名に変更
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--no-debugger"
        ],
        "jinja": true
      }
    ]
  }
  